package com.softxyz;

public class BinaryString {
	// required to make string N to M 
	
		 
		static void countStep(String str1, String str2) 
		{  
			int count = 0; 

			// Iterate the loop with str1 length 
			for (int i = 0; i < str1.length(); i++) { 
				// If any non-equal elements are found 
				// increment the counter 
				if (str1.charAt(i) != str2.charAt(i)) 
					count++; 
			} 

			// If counter is even print the swap 
			if (count % 2 == 0) 
				System.out.println(count / 2); 
			else
				System.out.println("-1 "); 
		} 

		// Driver Code 
		public static void main(String args[]) 
		{ 
			// Take two input 
			String binaryString1 = "1010"; 
			String binaryString2 = "0011"; 

			// Call the method 
			countStep(binaryString1, binaryString2); 
		} 
	} 


