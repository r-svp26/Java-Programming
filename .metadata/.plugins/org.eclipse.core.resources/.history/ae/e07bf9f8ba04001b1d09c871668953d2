package com.number.program;

public class StrongNumber {
	
	public static boolean isStrong(int num){
		
		int sum=0,temp=num;
		do{
			int rem=num%10;
			int fact=1;
			
			while(rem>1){
				fact=fact*rem;
				rem--;
			}
			sum=sum+fact;
			num=num/10;
			
		}while(num!=10);
		if(sum==temp)
			return true;
		
		return false;
	}

}
