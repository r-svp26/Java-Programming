package com.array.interview;

public class NumOfDays {

	int dd, mm, yy;
	int[] month = { 0, 31, 28, 31, 30, 31, 30, 31, 31, 30, 31, 30, 31 };

	NumOfDays(int dd, int mm, int yy) {
		this.dd = dd;
		this.mm = mm;
		this.yy = yy;

		if (yy % 400 == 0 || yy % 4 == 0 && yy % 100 != 0) {
			month[2] = 29;
		}
	}

	public int numberOfDay() {

		int days = 0;
		int y = yy - 1;

		days = days + y * 365;
		days = days + y / 400 + y / 4 - y / 100;

		for (int i = 0; i < mm; i++) {
			days = days + month[i];
		}
		days = days + dd;

		return days;
	}

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);

	}
}
