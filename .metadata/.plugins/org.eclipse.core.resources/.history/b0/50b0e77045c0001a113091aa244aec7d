package com.number.in;

import java.util.Scanner;

public class NPattern13 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		System.out.print("Enter the Number:");
		int n = sc.nextInt();
		
		for(int i=1;i<=n;i++){
			for(int j=1;j<n-i;j++){
				System.out.print("  ");
			}
			int k=1;
			for( k=1; k<=2*i-1;k++ ){
				System.out.print(k+" ");
				if(k<i)
					k++;
				else
					k--;
			}
			System.out.println();
		}
	}
}
