package com.number.patterns;

import java.util.Scanner;

public class Pattern3 {

	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		System.out.print("Enter the Number:");
		int num=sc.nextInt();
		
		int count=0;
		for(int i=1;i<=num;i++){
			for(int j=1;j<=i;j++)
			{
				count=count+1;
				System.out.print(count);
			}
			System.out.println();
		}
	}
}
