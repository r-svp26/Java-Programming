package com.star.in;

import java.util.Scanner;

public class SPattern6 {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		System.out.print("Enter the Number");
		int n = sc.nextInt();

		for (int i = 0; i < n; i++) {
			for (int j = 1; j < i; j++) {
				System.out.print("  ");
			}
			for (int k = 1; k<=2*(n-i)-1; k++) {
				System.out.print("* ");
			}
			System.out.println();
		}
	}

}
