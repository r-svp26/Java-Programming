package org.serialization.in;

import java.io.File;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.ObjectOutputStream;

public class SerialDemo {

	public static void main(String[] args) throws IOException {

		Student student = new Student(1, "Ritesh Yadav", 76.20, "Bengaluru");
		System.out.println(student);

		File file = new File("V:Programming/TextFile/SerialObject.text");

		FileOutputStream fout = new FileOutputStream(file);

		ObjectOutputStream obj = new ObjectOutputStream(fout);
		obj.writeObject(student);

		fout.flush();
		fout.close();
		obj.close();

		System.out.println("Successfully Object is Serialized !");
	}
}
