package com.number.in;

import java.util.Scanner;

public class NPattern10 {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		System.out.print("Enter the Number:");
		int num = sc.nextInt();

		for (int i = 1; i <= num; i++) {
			for (int j = 1; j < i; j++) {
				System.out.print("  ");
			}
			for (int k = 1; k <=num-i; k++) {
				System.out.print(k+" ");
			}
			System.out.println();
		}
		sc.close();
	}
}
